<!-- FAQ Section -->
{{ 'cs_section-faq.css' | asset_url | stylesheet_tag }}

<section class="exclusie-faq-section">
  <div class="exclusie-faq-container">
    <h2 class="exclusie-faq-heading">{{ section.settings.heading }}</h2>
    <div class="exclusie-faq-list">
      {% for block in section.blocks %}
        <div class="exclusie-faq-item" {{ block.shopify_attributes }}>
          <button
            class="exclusie-faq-question"
            aria-expanded="false"
            aria-controls="faq-answer-{{ block.id }}"
            onclick="this.classList.toggle('open'); var ans = document.getElementById('faq-answer-{{ block.id }}'); ans.style.display = ans.style.display === 'block' ? 'none' : 'block'; this.setAttribute('aria-expanded', ans.style.display === 'block');"
          >
            <span>{{ block.settings.question }}</span>
            <span class="exclusie-faq-arrow">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="9" viewBox="0 0 16 9" fill="none">
                <path d="M15 1.00195L8 8.00195L1 1.00195" stroke="#018CD0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
          </button>
          <div class="exclusie-faq-answer" id="faq-answer-{{ block.id }}" style="display: none;">
            {{ block.settings.answer }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ",
  "tag": "section",
  "class": "exclusie-faq-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "PROGRAM FAQS"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "How does your process work?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Answer goes here."
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "FAQ",
      "category": "Custom",
      "blocks": [{ "type": "faq" }, { "type": "faq" }, { "type": "faq" }]
    }
  ]
}
{% endschema %}
