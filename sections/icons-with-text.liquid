<!-- Exclusie Icons With Text Section -->
{{ 'css/icons-with-text.css' | asset_url | stylesheet_tag }}

<section class="exclusie-icons-section">
  <div class="exclusie-icons-container page-width">
    <div class="exclusie-icons-list">
      {% for block in section.blocks %}
        <div class="exclusie-icon-item" {{ block.shopify_attributes }}>
          <div class="exclusie-icon-media">
            {% if block.settings.icon_image %}
              <img
                width="40"
                height="40"
                src="{{ block.settings.icon_image | image_url: width: 96 }}"
                alt="Icon"
                style="width: 40px; height: 40px; object-fit: contain; {% if block.settings.icon_color %}filter: drop-shadow(0 0 0 {{ block.settings.icon_color }});{% endif %}"
              >
            {% else %}
              <span
                class="exclusie-icon-svg"
                style="{% if block.settings.icon_color %}color: {{ block.settings.icon_color }}; fill: {{ block.settings.icon_color }};{% endif %}"
              >
                {{- block.settings.icon_svg -}}
              </span>
            {% endif %}
          </div>
          <div class="exclusie-icon-title" style="{% if block.settings.title_color %}color: {{ block.settings.title_color }};{% endif %}">
            {{ block.settings.title }}
          </div>
          <div
            class="exclusie-icon-subtitle"
            style="{% if block.settings.subtitle_color %}color: {{ block.settings.subtitle_color }};{% endif %}"
          >
            {{ block.settings.subtitle }}
          </div>
        </div>
        {% unless forloop.last %}
          <div class="exclusie-icon-divider"></div>
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Icons With Text",
  "tag": "section",
  "class": "exclusie-icons-wrapper",
  "settings": [],
  "blocks": [
    {
      "type": "icon_text",
      "name": "Icon With Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image (optional)",
          "info": "If set, this image will be used instead of the SVG."
        },
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Icon SVG (optional)",
          "default": "<svg width='40' height='40' fill='none' stroke='black'><circle cx='20' cy='20' r='18' stroke-width='2'/></svg>"
        },
        {
          "type": "color",
          "id": "icon_color",
          "label": "Icon Color",
          "default": "#222222"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title Here"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#222222"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Subtitle here"
        },
        {
          "type": "color",
          "id": "subtitle_color",
          "label": "Subtitle Color",
          "default": "#222222"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Icons With Text",
      "category": "Custom",
      "blocks": [{ "type": "icon_text" }, { "type": "icon_text" }, { "type": "icon_text" }, { "type": "icon_text" }]
    }
  ]
}
{% endschema %}
