<!-- Sales Banner Section -->
{{ 'css/section-sales-banner.css' | asset_url | stylesheet_tag }}
<script src="{{ 'js/component-sales-banner.js' | asset_url }}" defer="defer"></script>

<sales-banner
  class="exclusive-section"
  style="
                {% if section.settings.background_image %}background-image: url('{{ section.settings.background_image | image_url }}');{% endif %}
  "
  data-bg-desktop="{% if section.settings.background_image %}{{ section.settings.background_image | image_url }}{% endif %}"
  data-bg-mobile="{% if section.settings.background_image_mobile %}{{ section.settings.background_image_mobile | image_url }}{% endif %}"
  data-title-desktop="{{ section.settings.title | escape }}"
  data-title-mobile="{{ section.settings.title_mobile | escape }}"
  data-subtitle-desktop="{{ section.settings.subtitle | escape }}"
  data-subtitle-mobile="{{ section.settings.subtitle_mobile | escape }}"
  data-button-desktop="{{ section.settings.button_text | escape }}"
  data-button-mobile="{{ section.settings.button_text_mobile | escape }}"
  data-title-color-desktop="{{ section.settings.title_color }}"
  data-title-color-mobile="{{ section.settings.title_color_mobile }}"
  data-subtitle-color-desktop="{{ section.settings.subtitle_color }}"
  data-subtitle-color-mobile="{{ section.settings.subtitle_color_mobile }}"
  data-button-color-desktop="{{ section.settings.button_color }}"
  data-button-color-mobile="{{ section.settings.button_color_mobile }}"
  data-button-bg-desktop="{{ section.settings.button_bg_color }}"
  data-button-bg-mobile="{{ section.settings.button_bg_color_mobile }}"
>
  <div class="exclusive-content">
    <h2 class="exclusive-title" id="exclusive-title" style="color: {{ section.settings.title_color }}">
      {{ section.settings.title | default: 'This store is exclusive to Carvana employees & select customers' }}
    </h2>
    <p class="exclusive-subtitle" id="exclusive-subtitle" style="color: {{ section.settings.subtitle_color }}">
      {{ section.settings.subtitle | default: 'Please log in to access your account.' }}
    </p>
    <button
      class="btn-login"
      id="exclusive-btn"
      onclick="showLoginModal()"
      style="color: {{ section.settings.button_color }}; background-color: {{ section.settings.button_bg_color }};"
    >
      {{ section.settings.button_text | default: 'Login to your account' }}
    </button>
  </div>
</sales-banner>

{% schema %}
{
  "name": "Sales Banner",
  "tag": "section",
  "class": "exclusive-section-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Background image for the entire section"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Mobile Background Image",
      "info": "Optional: background image for mobile (overrides desktop image on mobile)"
    },
    {
      "type": "html",
      "id": "title",
      "label": "Section Title",
      "default": "This store is exclusive to Carvana employees & select customers"
    },
    {
      "type": "html",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Please log in to access your account."
    },
    {
      "type": "html",
      "id": "button_text",
      "label": "Button Text",
      "default": "Login to your account"
    },
    {
      "type": "html",
      "id": "title_mobile",
      "label": "Mobile Section Title",
      "default": "This store is exclusive to Carvana employees & select customers"
    },
    {
      "type": "html",
      "id": "subtitle_mobile",
      "label": "Mobile Section Subtitle",
      "default": "Please log in to access your account."
    },
    {
      "type": "html",
      "id": "button_text_mobile",
      "label": "Mobile Button Text",
      "default": "Login to your account"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#183558"
    },
    {
      "type": "color",
      "id": "title_color_mobile",
      "label": "Mobile Title Color",
      "default": "#183558"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#183558"
    },
    {
      "type": "color",
      "id": "subtitle_color_mobile",
      "label": "Mobile Subtitle Color",
      "default": "#183558"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color_mobile",
      "label": "Mobile Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#00aed9"
    },
    {
      "type": "color",
      "id": "button_bg_color_mobile",
      "label": "Mobile Button Background Color",
      "default": "#00aed9"
    }
  ],
  "presets": [
    {
      "name": "Sales Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
